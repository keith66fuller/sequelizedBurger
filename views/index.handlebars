<h1>Eat-Da-Burger!</h1>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="burger_name">
    <button id="newburger" type="submit">Submit</button>
  </div>

</form>
<h2>Enter a burger you want to eat and click the Submit button.</h2>
